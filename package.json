{
  "name": "saving-satoshi-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:saving-satoshi/saving-satoshi-backend.git",
  "author": "Kevin Karsopawiro <k.karsopawiro@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "yarn start-dynamodb && yarn start-dynamodb-admin && yarn watch-app",
    "watch-app": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "build": "npm run clean && tsc && npm run copy-files",
    "lint": "eslint .",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/languages/**/* dist/",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start-dynamodb": "docker-compose up -d dynamodb-local",
    "stop-dynamodb": "docker-compose down",
    "clear-dynamodb": "docker volume rm saving-satoshi-backend_dynamodb_data && echo 'DynamoDB data cleared'",
    "start-dynamodb-admin": "DYNAMO_ENDPOINT=http://localhost:8000 dynamodb-admin > /dev/null 2>&1 &"
  },
  "_moduleAliases": {
    "lib": "dist/lib",
    "middleware": "dist/middleware",
    "models": "dist/models",
    "routes": "dist/routes",
    "types": "dist/types",
    "config": "dist/config"
  },
  "lint-staged": {
    "**/*.{js,ts}": "prettier --write"
  },
  "dependencies": {
    "@prisma/client": "5.2.0",
    "ansi-to-html": "^0.7.2",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dockerode": "^3.3.5",
    "dotenv": "^16.0.3",
    "dynamoose": "^4.0.0",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "pg": "^8.9.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.5.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "copyfiles": "^2.4.1",
    "dynamodb-admin": "^4.6.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.7.0",
    "prettier": "2.8.4",
    "prisma": "5.2.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "silent": false
  }
}
